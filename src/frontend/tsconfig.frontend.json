{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "../../dist/frontend",
    "rootDir": "..",
    "declaration": false,
    "declarationMap": false,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "shared/*": ["shared/*"],
      "config/*": ["config/*"]
    }
  },
  "include": [
    "**/*",
    "../shared/**/*",
    "../config/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../dist",
    "../../public",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.js"
  ]
}