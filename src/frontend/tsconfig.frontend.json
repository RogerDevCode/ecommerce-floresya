{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "rootDir": "..",
    "outDir": "../../dist/frontend",
    "jsx": "preserve",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../types/**/*",
    "../config/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../dist"
  ]
}