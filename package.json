{
  "name": "floresya-ecommerce",
  "version": "1.0.0",
  "description": "E-commerce platform for selling flowers and floral arrangements",
  "type": "module",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node backend/src/server.js",
    "dev": "nodemon --watch backend/src --ext js --exec \"NODE_ENV=development node backend/src/server.js\"",
    "demo": "npm run ts:build && node dist/backend/scripts/init-db.js && node dist/backend/server.js",
    "demo-simple": "node demo-server.js",
    "demo-visual": "echo 'ðŸŒ¸ FloresYa Visual Demo - No database required' && node demo-server.js",
    "build": "npm run ts:build && echo 'ðŸŒ¸ FloresYa Build completed - TypeScript compiled to JavaScript'",
    "vercel-build": "echo 'Vercel build completed'",
    "test": "vitest",
    "test:controllers": "vitest --run tests/unit/categoryController tests/unit/productController tests/unit/orderController",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:frontend": "vitest --run tests/unit/main.test.js tests/unit/product-detail.test.js",
    "test:supabase": "npm run test:controllers && npm run test:frontend",
    "lint": "eslint backend/src",
    "lint:fix": "eslint backend/src --fix",
    "lint:es6": "eslint backend/src-es6 --fix",
    "db:reset": "node backend/src/scripts/reset-db.js",
    "babel:build": "babel backend/src-es6 --out-dir backend/src-compiled --source-maps",
    "babel:watch": "babel backend/src-es6 --out-dir backend/src-compiled --source-maps --watch",
    "dev:es6": "babel-node backend/src-es6/server.js",
    "start:es6": "npm run babel:build && node backend/src-compiled/server.js",
    "ts:check": "tsc --noEmit",
    "ts:build": "tsc",
    "ts:watch": "tsc --watch",
    "dev:ts": "tsc --watch & nodemon --delay 2 dist/backend/server.js",
    "start:ts": "npm run ts:build && node dist/backend/server.js",
    "clean": "rm -rf dist/",
    "migration:backup": "cp -r frontend/js src-legacy/frontend/ && cp -r backend/src src-legacy/backend/",
    "migration:restore": "cp -r src-legacy/frontend/ frontend/js/ && cp -r src-legacy/backend/ backend/src/",
    "lint:ts": "eslint **/*.ts **/*.tsx",
    "type:check": "tsc --noEmit --skipLibCheck",
    "postinstall": "npm run ts:build"
  },
  "keywords": [
    "ecommerce",
    "flowers",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "FloresYa Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "core-js": "^3.45.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "@vitest/ui": "^3.2.4",
    "axios": "^1.11.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^15.7.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supabase": "^2.40.7",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
