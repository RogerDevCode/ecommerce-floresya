{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/frontend",
    "rootDir": "../",
    "declaration": false,
    "declarationMap": false,
    "types": [],
    "baseUrl": "../..",
    "paths": {
      "@backend/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@frontend/*": ["./src/frontend/*"]
    }
  },
  "include": [
    "../frontend/**/*",
    "../shared/**/*",
    "../config/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../dist",
    "../../public",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.js"
  ]
}
