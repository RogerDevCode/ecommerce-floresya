{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist/backend",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "composite": true
  },
  "include": [
    "src/app/**/*.ts",
    "src/config/**/*.ts",
    "src/controllers/**/*.ts",
    "src/models/**/*.ts",
    "src/services/**/*.ts",
    "src/utils/**/*.ts",
    "src/shared/**/*.ts",
    "src/types/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/frontend"
  ]
}