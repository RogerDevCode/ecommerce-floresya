{
  "project": "FloresYa E-commerce",
  "version": "2.0.0",
  "description": "TypeScript-based e-commerce platform for flower sales",
  "architecture": {
    "backend": {
      "framework": "Express.js",
      "language": "TypeScript",
      "database": "Supabase PostgreSQL",
      "api": "REST API"
    },
    "frontend": {
      "language": "TypeScript",
      "runtime": "Browser",
      "build": "TypeScript Compiler",
      "output": "./dist/frontend"
    }
  },
  "key_features": [
    "Product catalog with images",
    "Shopping cart functionality",
    "Order management",
    "User authentication",
    "Admin panel",
    "Payment processing",
    "Occasion-based filtering",
    "Responsive design"
  ],
  "code_structure": {
    "controllers": "API route handlers with validation",
    "services": "Business logic layer",
    "models": "Database types and interfaces",
    "frontend": "Client-side application",
    "config": "Configuration and database connections",
    "types": "Shared type definitions",
    "utils": "Utility functions"
  },
  "build_info": {
    "typescript_version": "5.9.2",
    "target": "ES2022",
    "module": "ESNext",
    "output_dir": "./dist",
    "watch_mode": "Supported via tsw.sh"
  },
  "quality_checks": {
    "eslint": "Strict configuration with no 'any' types",
    "typescript": "Strict mode enabled",
    "testing": "Vitest framework configured",
    "linting": "ESLint with TypeScript support"
  },
  "last_updated": "2025-09-15",
  "status": "Development - Core functionality implemented"
}