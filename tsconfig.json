{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@frontend/*": ["./frontend/*"],
      "@backend/*": ["./backend/*"],
      "@shared/*": ["./shared/*"]
    },
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src-legacy",
    "frontend",
    "backend",
    "oldfiles",
    "tests/**/*.test.js",
    "tests/**/*.test.ts",
    "*.config.js",
    "*.config.ts"
  ],
  "ts-node": {
    "esm": true,
    "moduleTypes": {
      "**/*.ts": "esm"
    },
    "experimentalSpecifierResolution": "node"
  }
}