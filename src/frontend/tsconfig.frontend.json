{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@frontend-types/*": ["./types/index.ts"],
      "@shared-types/*": ["../types/globals.ts"],
      "@database-types/*": ["../models/Database.ts"]
    },
    "outDir": "../../dist/frontend",
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // Assuming React or similar for frontend
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}